<% include header %> <% include navTopView %>

<div id="inform-infor" class="inform-infor container">
  <%if(String(user._id)==String(informPost.idOwner._id)){%>
  <div class="dropdown float-right">
    <button
      type="button"
      class="color-transparent remove-boder dropdown-toggle"
      data-toggle="dropdown"
    ></button>
    <div class="dropdown-menu">
      <button
        class="dropdown-item"
        data-toggle="modal"
        data-target="#edit-inform"
      >
        Sửa
      </button>
      <a class="dropdown-item" href="/inform/delete/<%= informPost._id%>"
        >Xóa</a
      >
    </div>
    <div class="modal fade" id="edit-inform">
      <div class="modal-dialog">
        <div class="modal-content">
          <!-- Modal Header -->

          <div class="modal-header">
            <h4 class="modal-title">Sửa bài đăng</h4>
            <button type="button" class="close" data-dismiss="modal">
              &times;
            </button>
          </div>

          <form action="/inform/edit" method="post">
            <div class="modal-body">
              <input
                type="hidden"
                value="<%=informPost._id%>"
                name="idInform"
              />
              <a href=""
                ><span><b> <%=user.name%> </b></span></a
              >
              <br />

              <label><b>Title</b></label>
              <textarea class="form-control" rows="2" name="title">
<%= informPost.title%></textarea
              >
              <label><b>Content</b></label>
              <textarea class="form-control" rows="4" name="content">
<%= informPost.content%></textarea
              >
            </div>

            <div class="modal-footer">
              <button type="submit" class="btn btn-success">Sửa</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%}%>
  <h2 class="title-text text-primary"><%= informPost.title%></h2>
  <p><%= informPost.content%></p>
  <div class="d-flex justify-content-between">
    <div>
      <small
        ><span class="text-danger">Đăng bởi:</span>
        <%= informPost.idOwner.username%>
      </small>
    </div>
    <div>
      <small
        ><span class="text-success">Phân loại:</span>
        <%=b.name%> |

        <span class="text-warning">Ngày đăng:</span>
        <%= informPost.createdAt%>
      </small>
    </div>
  </div>
</div>
<% include footer %>

<!-- final -->
